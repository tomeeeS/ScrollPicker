<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollPicker">
        <attr name="selectorColor" format="integer"/>
        <attr name="selectorStyle" format="enum">
            <enum name="rectangleFilled" value="0"/>
            <enum name="rectangle" value="1"/>
            <enum name="classic" value="2"/>
            <!--<enum name="classicShort" value="3"/>-->
        </attr>
        <attr name="textColor" format="integer"/>
        <attr name="selectedTextColor" format="integer"/>
        <attr name="itemsToShow" format="integer"/>
        <attr name="value" format="integer"/>
        <attr name="textSize" format="float"/>
        <attr name="selectedTextSize" format="float"/>
        <attr name="isEnabled" format="boolean"/>
        <attr name="list" format="reference" />
    </declare-styleable>
</resources>